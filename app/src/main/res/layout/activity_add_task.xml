<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="addForm" type="norinori6791.gmail.com.cycledo.addtask.AddTaskViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddTaskActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvCategoryTitle"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <TextView
        android:id="@+id/tvAddTitile"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:text="@string/tv_add_title"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategory" />
    <EditText
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edAddTitle"
        android:text="@={addForm.title}"
        app:errorText="@{@string/err_title}"
        app:showError="@{addForm.titleValid}"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAddTitile" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/tv_add_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddContent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edAddTitle" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

    <EditText
        android:layout_width="380dp"
        android:layout_height="339dp"
        android:inputType="textMultiLine"
        android:gravity="start|top"
        android:ems="10"
        android:text="@={addForm.content}"
        app:errorText="@{@string/err_content}"
        app:showError="@{addForm.contentValid}"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp" android:id="@+id/edAddContent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAddContent" android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <Button
        android:text="@string/bt_add"
        android:layout_width="107dp"
        android:layout_height="47dp"
        android:id="@+id/btAdd"
        android:onClickListener="@{(v)->addForm.validate()}"
        app:layout_constraintEnd_toStartOf="@+id/btCancel" android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_bias="0.801" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edAddContent"/>
    <Button
        android:text="@string/bt_cancel"
        android:layout_width="109dp"
        android:layout_height="50dp"
        android:id="@+id/btCancel"
        android:onClickListener="@{(v)->addForm.onClickCancel(context)}"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="96dp" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edAddContent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>