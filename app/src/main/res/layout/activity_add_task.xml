<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddTaskActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:text="@string/tv_add_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/tvAddTitile" app:layout_constraintTop_toBottomOf="@+id/toolbar2"
            android:layout_marginTop="8dp" android:textSize="18sp"/>
    <EditText
            android:layout_width="327dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edAddTitle"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAddTitile" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/tv_add_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAddContent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edAddTitle" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/bt_add"
            android:layout_width="107dp"
            android:layout_height="47dp"
            android:id="@+id/btAdd"
            app:layout_constraintEnd_toStartOf="@+id/btCancel" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.801" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edAddContent"/>
    <Button
            android:text="@string/bt_cancel"
            android:layout_width="109dp"
            android:layout_height="50dp"
            android:id="@+id/btCancel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="96dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edAddContent"/>
    <EditText
            android:layout_width="380dp"
            android:layout_height="339dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/edAddContent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvAddContent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>